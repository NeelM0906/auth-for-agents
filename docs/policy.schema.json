{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://auth4agents.dev/schemas/policy-0.1.json",
  "title": "Auth for Agents Policy v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "issuer_metadata", "supported_auth", "operations", "enforcement"],
  "properties": {
    "version": { "const": "0.1" },
    "issuer_metadata": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["issuer", "jwks_uri"],
        "properties": {
          "issuer": { "type": "string", "format": "uri" },
          "jwks_uri": { "type": "string", "format": "uri" }
        }
      }
    },
    "supported_auth": {
      "type": "array",
      "minItems": 1,
      "items": { "enum": ["dpop_jwt"] }
    },
    "operations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["resource", "actions", "required_scopes"],
        "properties": {
          "resource": { "type": "string" },
          "actions": {
            "type": "array",
            "minItems": 1,
            "items": { "enum": ["read", "write", "delete", "list", "execute"] }
          },
          "required_scopes": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          }
        }
      }
    },
    "rate_limits": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key", "resource", "limit"],
        "properties": {
          "key": { "enum": ["agent", "principal", "agent+principal"] },
          "resource": { "type": "string" },
          "limit": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "rpm": { "type": "integer", "minimum": 1 },
              "rph": { "type": "integer", "minimum": 1 }
            }
          }
        }
      }
    },
    "pricing": {
      "type": "object",
      "additionalProperties": false,
      "required": ["unit", "amount_usd"],
      "properties": {
        "unit": { "type": "string" },
        "amount_usd": { "type": "number", "minimum": 0 }
      }
    },
    "contact": { "type": "string" },
    "enforcement": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "reject_on_missing_agent_identity": { "type": "boolean" }
      }
    }
  }
}

